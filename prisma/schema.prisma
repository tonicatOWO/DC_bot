generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model LeaveApplicationForm {
  schoolID    String   @id @map("_id")
  name        String
  discordID   String?  @map("discordId")
  leaveReason String
  startDate   DateTime
  endDate     DateTime
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@unique([discordID, startDate])
  @@map("LeaveApplicationForm")
}

model Member {
  schoolID  String  @id @map("_id")
  discordID String?
  name      String
  class     String
  email     String?

  @@map("Member")
}
