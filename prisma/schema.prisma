generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum LeaveType {
  SICK
  VACATION
  PERSONAL
  OTHER
}

model LeaveApplicationForm {
  schoolID        String    @id @map("_id")
  name            String
  telephoneNumber String?
  discordID       String    @map("discordId")
  leaveType       LeaveType
  startDate       DateTime
  endDate         DateTime
  status          String    @default("pending")
  submittedAt     DateTime  @default(now())

  @@unique([discordID, startDate])
  @@map("LeaveApplicationForm")
}

model Member {
  schoolID  String  @id @map("_id")
  discordID String?
  name      String
  class     String
  email     String?

  @@map("Member")
}
