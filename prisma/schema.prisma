generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum LeaveType {
  SICK
  VACATION
  PERSONAL
  OTHER
}

model LeaveApplicationForm {
  schoolID        String    @id @map("_id")
  name            String
  telephoneNumber String?
  discordId       String
  leaveType       LeaveType
  startDate       DateTime
  endDate         DateTime
  status          String    @default("pending")
  submittedAt     DateTime  @default(now())

  @@unique([discordId, startDate])
}

model Member {
  schoolID  String  @id @map("_id")
  name      String
  class     String
  email     String? @unique
  discordId String? @unique
}
