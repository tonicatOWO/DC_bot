generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model LeaveApplicationForm {
  id              Int       @id @default(autoincrement())
  name            String
  email           String
  telephoneNumber String
  discordId       String?
  leaveType       String
  startDate       DateTime
  endDate         DateTime
  reason          String
  status          String    @default("pending")
  submittedAt     DateTime  @default(now())
  approvedAt      DateTime?
  approvedBy      String?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  @@unique([email, startDate])
}

model ClubAccount {
  id        Int      @id @default(autoincrement())
  date      DateTime @default(now())
  item      String
  amount    Float
  isIncome  Boolean
  category  String
  member    String?
  event     String?
  receipt   String?
  note      String?
  createdAt DateTime @default(now())

  @@index([date])
  @@index([category])
}
